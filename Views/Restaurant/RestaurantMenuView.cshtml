@model IEnumerable<PSA_MVC_V2.Models.Database.Dish>

@{
    ViewData["Title"] = "RestaurantMenuView";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DishTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DishPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkAdditionalServicesaddServices)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DishTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkAdditionalServicesaddServices.AddServicesId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DishId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
